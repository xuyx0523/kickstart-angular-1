{
    "name": "esp-best",
    "description": "ESP Best Practices Angular Skeleton",
    "version": "0.8.1",
    "dependencies": {
        "esp-angular-mvc": "~4",
        "less": ">=1.3.3",
        "bootstrap": "~3",
        "angular-bootstrap": ">=0.7.0",
        "html5shiv": "*",
        "font-awesome": "*",
        "more": "*",
        "respond": "*"
    },
    "export": [
        "client/**", 
        "templates/**"
    ],
    "esp": {
        "auth": "app",
        "mode": "debug",
        "modes": {
            "debug": {
                "flat": false,
                "showErrors": true,
                "keepSource": true,
                "update": true,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    }
                }
            },
            "release": {
                "flat": true,
                "cache": 86400,
                "compressed": true,
                "showErrors": false,
                "update": false,
                "keepSource": false,
                "login": {
                    "name": "",
                    "abilities": {
                        "edit": true,
                        "view": true
                    }
                }
            }
        },
        "loginRequired": "",
        "server": {
            "generate": {
                "appweb": "esp-best/appweb.conf",
                "files": [
                    "esp-best/start.bit",
                    "esp-best/client/**"
                ]
            }
        }
    }
}
