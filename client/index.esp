<!doctype html>
<html lang="en" ng-csp>

<head>
    <title>Kickstart</title>
    <meta charset="utf-8" />
    <link rel="icon" href="@~/assets/favicon.ico" type="image/x-icon">
    <% stylesheets(NULL); %>
</head>

<body id='body' ng-controller="HomeControl" data-config='<% renderConfig(); %>'>
    <header>
        <nav class="navbar navbar-inverse navbar-static-top">
            <div class="navbar-header">
                <a class="navbar-brand ng-cloak" href="#"><i class="glyphicon glyphicon-tower"></i> Kickstart</sup></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right ng-cloak">
                    <li>
                        <form class="navbar-form">
                            <input class="form-control" type="text">
                            <i class="glyphicon glyphicon-search"></i>
                        </form>
                    </li>
                    <li ng-if="Esp.can('edit')"><a href="#/setting/"><span class="glyphicon glyphicon-wrench"></span></a></li>
                    <li class="dropdown ng-cloak" ng-controller="StatusControl" ng-show="events.length">
                        <a href="#" class="dropdown-toggle"><i class="fa fa-warning"></i></a>
                        <ul class="dropdown-menu notify">
                            <li class="header">You have {{eventCount}} event notices</li>
                            <li class="message" ng-repeat="event in events" esp-click="/event/{{events[$index].id}}">
                                <i class="severity fa fa-inverse event-{{event.type}}" ng-class="Esp.faclass(event.type)"></i>
                                <span>{{event.title}}</span>
                                <!-- MOB - should really convert to xx mins ago -->
                                <span class="time"><i class="fa fa-clock-o"></i> {{event.date}}</span>
                            </li>
                            <li class="footer"><a href="#/event/list">View all events</a></li>
                        </ul>
                    </li>
                    <li class="dropdown" ng-controller="UserControl">
                        <a href="#" class="dropdown-toggle" ng-cloak>{{authname()}} 
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a ng-href="#/user/{{Esp.user ? 'logout' : 'login'}}">
                                    <i class="fa fa-power-off"></i> {{Esp.user ? 'Sign out' : 'Sign in'}}
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li><a href=""><i class="fa fa-question"></i></a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container ng-cloak">
            <!-- MOB should style text-center in sidebar itself -->
        <nav class="sidebar nav-collapse col-sm-2" ng-show="showNav">
            <ul class="nav nav-tabs nav-stacked">
                <esp-menu href="/" value="Dash" icon="fa fa-tachometer"></esp-menu>
                <esp-menu href="/port/list" value="Ports" icon="fa fa-sitemap"></esp-menu>
                <esp-menu href="/vlan/list" value="VLANs" icon="glyphicon glyphicon-hdd"></esp-menu>
                <esp-menu ng-show="Esp.can('edit')" href="/setting" value="Settings" icon="glyphicon glyphicon-cog"></esp-menu>
                <esp-menu href="/user/list" value="Users" icon="glyphicon glyphicon-user"></esp-menu>
                <esp-menu href="/event/list" value="Events" icon="glyphicon glyphicon-list"></esp-menu>
                <esp-menu href="" value="Demos" icon="fa fa-signal">
                    <esp-menu href="/demo/demo-svg" value="SVG"></esp-menu>
                    <esp-menu href="/demo/demo-1" value="Demo 1"></esp-menu>
                    <esp-menu href="/demo/demo-2" value="Demo 2"></esp-menu>
                </esp-menu>
            </ul>
        </nav>
        <section class="content col-sm-10" id="content">
            <div ng-view class="ng-cloak"></div>
        </section>
    </main>
    <div ng-repeat="(field, msg) in feedback">
        <span class="ng-hide-remove" ng-class="'feedback-' + field" ng-cloak>{{msg}}</span>
    </div>
    <footer id="author" ng-cloak>
        <span class="pull-right">Powered by ESP &mdash; &copy; Embedthis Software 2013</span>
    </footer>
    <% scripts(NULL); %>
</body>
</html>
