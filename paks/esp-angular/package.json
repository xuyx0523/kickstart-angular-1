{
    "name": "esp-angular",
    "description": "Embedthis ESP for Angular",
    "version": "5.2.2",
    "keywords": [
        "esp",
    ],
    "dependencies": {
        "angular": "~1.2"
    },
    "licenses": [ {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        }, {
            "type": "Commercial",
            "url": "https://embedthis.com/licensing/"
        }
    ],
    "export": [ {
            from: [
                "*.js",
            ],
            to: '${LIB}/esp-angular',
            overwrite: true,
        }
    ],
    "app": {
        "client": {
            "+scripts": [
                "${LIB}/esp-angular/*.js"
            ],
            "mappings": {
                "auth": {
                    "login": "app.http.auth.login",
                    "store": "app.http.auth.store"
                },
                "formats":      'app.http.formats',
                "prefix":       'app.http.prefix',
                "serverPrefix": 'app.http.serverPrefix',
                "timeouts": "app.http.timeouts"
            }
        }
    },
    "ignore": [
        "doc/**",
    ]
}
